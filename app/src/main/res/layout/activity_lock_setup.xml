<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockSetupActivity"
    android:background="@color/myPrimary"
    android:gravity="center_horizontal"


    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myPrimaryDark"
            app:titleTextColor="@color/white"

            />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lock_icon"
        app:tint="@color/white"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use code lock to protect your diary."
        android:textColor="@color/white"
        android:textSize="16sp"

        />

    <EditText
        android:id="@+id/code_lock_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Enter code"
        android:drawableTint="@color/myPrimaryDark"
        android:drawableLeft="@drawable/code_lock_icon"
        android:background="@drawable/code_lock_input"
        android:layout_marginStart="20dp"
        android:drawablePadding="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />


    <TextView
        android:id="@+id/code_lock_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Choose Question"
        android:drawableTint="@color/myPrimaryDark"
        android:drawableLeft="@drawable/question_mark_icon"
        android:background="@drawable/code_lock_input"
        android:layout_marginStart="20dp"
        android:drawablePadding="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"


        />

    <EditText
        android:id="@+id/code_lock_question_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Enter code"
        android:drawableTint="@color/myPrimaryDark"
        android:drawableLeft="@drawable/question_answer_icon"
        android:background="@drawable/code_lock_input"
        android:layout_marginStart="20dp"
        android:drawablePadding="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        />

        <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        />

    <Button
        android:id="@+id/disable_lock_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disable lock"
        android:visibility="gone"
        />





</LinearLayout>